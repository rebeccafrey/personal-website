{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "my personal website",
  "main": "index.html",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html",
    "prettier": "prettier --write src/**/*.{scss,html}",
    "htmlhint": "htmlhint src/**/*.html",
    "stylelint": "stylelint src/scss",
    "stylelint:fix": "npm run stylelint -- --fix",
    "fix": "npm run prettier && npm run stylelint:fix",
    "lint": "npm run eslint && npm run htmlhint && npm run stylelint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run eslint:fix"
    ],
    "src/**/*.scss": [
      "npm run stylelint:fix"
    ],
    "src/**/*.html": [
      "npm run htmlhint"
    ]
  },
  "author": "Rebecca Frey <rebecca.frey101@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@namics/stylelint-bem": "^6.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "htmlhint": "^0.11.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.2",
    "sass": "^1.26.3",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0"
  }
}
